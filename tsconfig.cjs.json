{
  "compilerOptions": {
    "declaration": true,
    "module": "ES6",
    "outDir": "dist/cjs",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions":true,
    "emitDeclarationOnly": true

  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
